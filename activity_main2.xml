<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="790dp"
        android:layout_height="1166dp"
        android:src="@drawable/beef_burger"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.755" />

    <androidx.cardview.widget.CardView
        android:layout_width="377dp"
        android:layout_height="230dp"
        android:layout_marginEnd="16dp"
        android:topLeftRadius="45dp"
        android:topRightRadius="45dp"
        app:cardCornerRadius="@android:dimen/app_icon_size"
        app:cardElevation="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.944"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:fontFamily="@font/acme"
            android:paddingLeft="70dp"
            android:paddingTop="15dp"
            android:text="Thanks for chosing"
            android:textColor="#4B2A85"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="377dp"
            android:layout_height="157dp"
            android:layout_margin="1dp"
            android:fontFamily="@font/acme"
            android:paddingTop="80dp"
            android:text="Enjoy your food!!"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#4B2A85"
            android:textSize="28sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="horizontal"
            android:paddingLeft="80dp"
            android:paddingTop="165dp">>

            <Button
                android:id="@+id/btn_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="SignInpage"
                android:text="signup" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="horizontal"
            android:paddingLeft="225dp"
            android:paddingTop="165dp">

            <Button
                android:id="@+id/btn_signin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="openLogIn"
                android:text="Signin"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>