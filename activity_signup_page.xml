<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b"
    tools:context=".SignUp_page">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="414dp"
        android:layout_height="229dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-2dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="315dp"
        android:layout_height="341dp"
        android:bottomLeftRadius="45dp"
        android:bottomRightRadius="45dp"
        android:topLeftRadius="45dp"
        android:topRightRadius="45dp"
        app:cardCornerRadius="@android:dimen/app_icon_size"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.805"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="345dp"
            android:paddingLeft="30dp"
            android:paddingTop="250dp"
            android:text="By sign up, you agree to our Terms of Use and Privace Police"
            android:textColor="#000000"
            android:textSize="10sp"
            tools:layout_editor_absoluteX="50dp"
            tools:layout_editor_absoluteY="192dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="247dp"
            android:layout_height="67dp"
            android:fontFamily="serif"
            android:paddingLeft="65dp"
            android:paddingTop="5dp"
            android:text="Sign up"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="50dp"
            tools:layout_editor_absoluteY="192dp" />

        <EditText
            android:id="@+id/ed_name"
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:hint="Enter Full Name"
            android:inputType="textPersonName"
            android:paddingTop="70dp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold|italic"
            tools:layout_editor_absoluteX="50dp"
            tools:layout_editor_absoluteY="192dp" />

        <EditText
            android:id="@+id/ed_userName"
            android:layout_width="287dp"
            android:layout_height="wrap_content"
            android:hint="Enter Username"
            android:paddingTop="110dp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold|italic"
            tools:layout_editor_absoluteX="50dp"
            tools:layout_editor_absoluteY="192dp" />

        <EditText
            android:id="@+id/ed_email"
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Email Adress"
            android:inputType="textEmailAddress"
            android:paddingTop="160dp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold|italic"
            tools:layout_editor_absoluteX="50dp"
            tools:layout_editor_absoluteY="192dp" />

        <EditText
            android:id="@+id/ed_pass"
            android:layout_width="287dp"
            android:layout_height="243dp"
            android:ems="10"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:paddingTop="200dp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold|italic"
            tools:layout_editor_absoluteX="50dp"
            tools:layout_editor_absoluteY="192dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="100dp"
            android:paddingTop="270dp">

            <Button
                android:id="@+id/btn_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Signup"
                tools:layout_editor_absoluteX="105dp"
                tools:layout_editor_absoluteY="462dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>