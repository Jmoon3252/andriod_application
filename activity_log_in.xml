<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic2"
    android:scaleType="fitXY"
    tools:context="LogIn">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="281dp"
        android:layout_height="25dp"
        android:background="#FDF7F7"
        android:fontFamily="@font/alata"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:text="Please Login with your Email and password"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/cardView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.415"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.351"
        tools:ignore="MissingConstraints" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="432dp"
        android:layout_height="148dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-3dp">

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView26"
        android:layout_width="321dp"
        android:layout_height="70dp"
        android:bottomLeftRadius="45dp"
        android:bottomRightRadius="45dp"
        android:topLeftRadius="45dp"
        android:topRightRadius="45dp"
        app:cardCornerRadius="@android:dimen/app_icon_size"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.045"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="293dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alata"
            android:paddingLeft="100dp"
            android:text="Sign In"
            android:textColor="@color/black"
            android:textSize="34sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_signin"
        android:layout_width="162dp"
        android:layout_height="46dp"
        android:text="Sign In"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.627"
        tools:ignore="MissingConstraints" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView27"
        android:layout_width="260dp"
        android:layout_height="58dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.531">

        <EditText
            android:id="@+id/userPass"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:ems="10"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:lineSpacingExtra="8sp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:singleLine="true"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            android:textColor="@color/purple_500"
            android:textSize="16sp"
            android:textStyle="bold|italic"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/password"
            tools:ignore="MissingConstraints" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView28"
        android:layout_width="254dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.424">

        <EditText
            android:id="@+id/userEmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:hint="Enter Email"
            android:inputType="textPersonName"
            android:lineSpacingExtra="8sp"
            android:lines="?attr/motionDurationShort1"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:singleLine="false"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold|italic"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:layout_width="68dp"
            android:layout_height="53dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/username"
            tools:ignore="MissingConstraints" />
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>